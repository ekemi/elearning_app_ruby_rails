<!DOCTYPE html>
<html>
  <head>
    <title>ElearningAppRubyRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
  <nav   style ="background-color:#0B103D; color: white;border: 2px solid red; 
  border-radius:5px; text-align:center;">
  
    
  <%=link_to 'Courses', courses_path%>
  <%=link_to 'Students', students_path%>
  <%=link_to 'Reviews', reviews_path%>
    <%if user_signed_in?%>
    <%=form_tag(courses_path, :method =>'get') do %>
      <%=search_field_tag :search, params[:search], placeholder: "Search"%>
      <%= submit_tag ("Search Only courses in db")%>
      <%end%>

    <%=form_tag(destroy_user_session_path, method: :delete, style: "display:inline-block;") do %>
      <%=submit_tag "Sign Out"%>
      <%end%>
      <%else%>
      <%=link_to "Sign in with Github", user_github_omniauth_authorize_path%>
      <%=link_to 'Sign Up', new_user_registration_path%>
      <%=link_to 'Sign In',new_user_session_path%>
      <%end%>
    </nav>
  
  <p class="notice"><%= notice -%></p>
  <p class="alert"><%= alert %></p>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
  <% end -%>
    <%= yield %>
  </body>
</html>
